<plugin>

   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            name="%product.name"
            application="org.eclipse.e4.ui.workbench.swt.E4Application">
         <property
               name="appName"
               value="%application.name">
         </property>
         <property
               name="applicationCSS"
               value="platform:/plugin/org.eclipse.passage.loc.operator/css/default.css">
         </property>
         <property
               name="applicationXMI"
               value="platform:/plugin/org.eclipse.passage.loc.workbench/LOC.e4xmi">
         </property>
         <property
               name="lifeCycleURI"
               value="bundleclass://org.eclipse.passage.loc.workbench/org.eclipse.passage.loc.workbench.LocLifeCycle">
         </property>
         <property
               name="windowImages"
               value="images/passage16.png,images/passage32.png,images/passage48.png,images/passage64.png,images/passage128.png">
         </property>
         <property
               name="aboutImage"
               value="images/passage_lg.png">
         </property>
      </product>
   </extension>

</plugin>
